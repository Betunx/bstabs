# Black Sheep API - Environment Variables Example
# Copia este archivo a .env y ajusta los valores

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=blacksheep
DATABASE_USER=bsadmin
DATABASE_PASSWORD=bsdev2024

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
